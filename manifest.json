{
  "manifest_version": 2,

  "name": "RECOIN Social Computer Extension",
  "description": "Let's you contribute to RECOIN validate tasks",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "background",
    "storage",
    "http://recoin.cloudapp.net:3215/"
  ]
}